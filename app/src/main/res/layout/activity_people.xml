<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:text="联系人详情"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/backgroundGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ctyon.com.logcatproject.contacts.view.CircleTextView
            android:id="@+id/icon_people"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/people_name"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="asdadad"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/backgroundGray"/>

    <TextView
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:text="电话"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/backgroundGray"/>

    <TextView
        android:id="@+id/people_number"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/backgroundGray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/backgroundGray"/>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onPttClick"
            android:id="@+id/people_ptt"
            android:background="@drawable/selector_button"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="PTT"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="onCallClick"
            android:id="@+id/people_call"
            android:background="@drawable/selector_button"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:text="拨打电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
